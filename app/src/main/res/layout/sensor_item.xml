<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/sensor_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/favourite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_not_favourite"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:contentDescription="Set sensor as favourite"/>

        <TextView
            android:id="@+id/sensor_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sensor_name_text_view"
            android:text="Sensor Address"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor_rssi_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSSI: -0 dB"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_below="@id/sensor_name_text_view"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>